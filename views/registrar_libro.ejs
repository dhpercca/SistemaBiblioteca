                    <span class="title">Administracion</span>

                </a></li>
            </ul>
        </div>
        <div class="main_container">
            
            <div class="item1">
                <span class="sub_title">REGISTRO DE EJEMPLARES</span>
            </div>
            

            <div class="item">
                <div class="form-row">
                    <div class="form-group col-md-4" >
                        <select class="form-control" id="autor" name="autor"></select>
                    </div>
                    <div class="form-group col-md-4" >
                        <select class="form-control" id="editorial" name="editorial"></select>
                    </div>
                    
                        
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4" >
                        <select class="form-control" id="categoria" name="categoria"></select>
                    </div>
                    <div class="form-group col-md-4" >
                        <input class="form-control" type="text" name="descripcion" id="descripcion" placeholder="Descripcion">
                    </div>
                        
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4" >
                        <input class="form-control" type="text" name="titulo" id="titulo" placeholder="Titulo">
                    </div>
                    <div class="form-group col-md-2" >
                        <div> &nbsp;Id</div>
                            
                    </div>
                    <div class="form-group col-md-2" >
                        <div  id='idejemplar_libro'>0</div>
                    </div>
                        
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4" >
                        <button type="button" class="btn btn-primary" onclick="guardar_ejemplar_libro()">Guardar Ejemplar</button>
                    </div>
                    <div class="form-group col-md-4" >
                        <button type="button" class="btn btn-success" onclick="limpiaCampos()">Limpiar</button>
                    </div>

                </div>
                
            </div>

            <!-- Modal -->
            <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Registro de Libros</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-row">
                            <div class="form-group col-md-6" >
                                <select class="form-control" id="estado_libro" name="estado_libro"></select>
                            </div>
                            <div class="form-group col-md-6" >
                                <select class="form-control" id="ejemplar_libro" name="ejemplar_libro"></select>
                            </div>
                                
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6" >
                                <input class="form-control" type="date" name="fecha_compra" id="fecha_compra" placeholder="Fecha de Compra">
                            </div>
                            <div class="form-group col-md-6" >
                                <input class="form-control" type="number"  name="precio" id="precio" placeholder="Precio">
                            </div>
                                
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-2" >
                                <div> &nbsp;Id</div>
                                    
                            </div>
                            <div class="form-group col-md-2" >
                                <div  id='codlibro'>0</div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="guardar_libro()">Guardar</button>
                    </div>
                </div>
                </div>
            </div>

            <div class="item">
                <div class="form-row">
                    <div class="form-group col-md-4" >
                        
                        <input class="form-control" type="text"  name="buscar_t" id="buscar_t" placeholder="Ingrese un titulo">
                    </div>
                    <div class="form-group col-md-6" >
                        <button type="button" class="btn btn-success" onclick="buscar_titulo(0)">Buscar</button>
                    </div>
                </div>
                
                <div class="form-row">
                    <div id="listar_ejemplar" title="Lista de Ejemplares">
                        <div id="ListaDetalle"></div> 
                    </div>
                </div>
                
            </div>
                    

                  
                
                
            
        </div>
        
    
    </div>
    
</body>
    
